{{> header}}
<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="mt-4">Your Wish List</h1>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Total</th>
                    <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody>
                {{#wishlistProducts}}
                    <tr>
                        <td>{{product.title}}</td>
                        <td class="qty">{{quantity}}</td>
                        <td>{{wishlistcct}}</td>
                        <td class="col-md-1">
                            <form method="post" action="/wishlist/delete">
                                <input name="sku" value="{{product.sku}}" type="hidden"/>
                                <button class="btn btn-danger btn-sm remove-item" type="submit">Remove</button>
                            </form>
                        </td>
                    </tr>
                {{/wishlistProducts}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.container -->
{{> footer}}